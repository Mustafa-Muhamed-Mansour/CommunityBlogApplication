<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PostDetailsActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_view_post_details"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txt_view_title_post_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_17ssp"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="#2e2e2e"
        />


    <TextView
        android:id="@+id/txt_view_description_post_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_17ssp"
        android:padding="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_5sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_view_profile_post_details"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_profile"
            android:layout_marginStart="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/edit_txt_comment_post_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Write Comment"
            android:textColorHint="@android:color/black"
            android:inputType="text"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            />

        <Button
            android:id="@+id/btn_write_comment_post_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_image_view_edit_add_post"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Add"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp"
            android:textAllCaps="false"
            />



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r_v_post_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="#F4F5F6"
        />

</LinearLayout>