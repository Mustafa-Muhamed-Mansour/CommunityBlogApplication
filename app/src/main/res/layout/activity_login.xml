<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.LoginActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_25sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_view_profile_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        >

        <EditText
            android:id="@+id/edit_txt_mail_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail"
            app:hintTextColor="@android:color/black"
            android:textSize="@dimen/_15ssp"
            android:textColor="@android:color/black"
            android:inputType="textEmailAddress"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:passwordToggleEnabled="true"
        >

        <EditText
            android:id="@+id/edit_txt_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:hintTextColor="@android:color/black"
            android:textSize="@dimen/_15ssp"
            android:textColor="@android:color/black"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:padding="@dimen/_5sdp"
        >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/background_button"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ProgressBar
            android:id="@+id/progress_bar_loading_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_view_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?  Create An Account "
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12ssp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        />


</LinearLayout>